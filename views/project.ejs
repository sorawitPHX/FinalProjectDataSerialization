                    let msg = `<%= msg %>`
                    if (status == 'success') {
                        Swal.fire({
                            title: "ดำเนินการสำเร็จ",
                            text: msg,
                            icon: "success"
                        }).then((result) => {
                            window.location.href = '/project'
