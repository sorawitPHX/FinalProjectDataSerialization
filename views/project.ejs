<div class="container" style="margin-top: 10vh;">

    <div class="mb-4 shadow-sm rounded p-3">
        <div class="table-responsive">
            <div class="">
                <div class="table-title text-white p-3 px-5 rounded-top">
                    <div class="row">
                        <div class="col-sm-6">
                            <h2>จัดการผลงานที่ตีพิมพ์ (สำหรับผู้ดูแล)</h2>
                        </div>
                        <div class="col-sm-6">
                            <div class="text-end">
                                <a href="" class="btn btn-success" style="background-color: #28a745;"
                                    data-toggle="modal"><i class="bi bi-plus-circle-fill"></i>
                                    <span>เพิ่มงานวิจัย</span></a>
                                <a href="" class="btn btn-danger" data-toggle="modal"><i
                                        class="bi bi-dash-circle-fill"></i> <span>ลบงานวิจัย</span></a>
                            </div>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>
                                <span class="custom-checkbox">
                                    <input type="checkbox" id="selectAll">
                                    <label for="selectAll"></label>
                                </span>
                            </th>
                            <th>ชื่องานวิจัย</th>
                            <th>รายละเอียด</th>
                            <th>ลิงก์</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% projects.forEach((project, index)=> { %>
                            <tr>
                                <td>
                                    <span class="custom-checkbox">
                                        <input type="checkbox" id="checkbox_<%= index %>" name="options[]" value="1">
                                        <label for="checkbox_<%= index %>"></label>
                                    </span>
                                </td>
                                <td>
                                    <%= project.project_name %>
                                </td>
                                <td>
                                    <%= project.project_desc.length> 80 ? project.project_desc.substring(0, 80) + '...'
                                        : project.project_desc %>
                                </td>
                                <td>
                                    <a class="link-primary link-underline-opacity-0" href="<%= project.project_link %>">
                                        <%= project.project_link.length> 20 ? project.project_link.substring(0, 20) +
                                            '...' : project.project_link %>
                                    </a>
                                </td>
                                <td class="text-center" style="font-size: large;">
                                    <a href="#" class="p-1 me-2" data-toggle="modal" style="text-decoration: none;">
                                        <i class="bi bi-pencil-fill text-warning"></i>
                                    </a>
                                    <a href="#" class="p-1 me-2" data-toggle="modal" style="text-decoration: none;">
                                        <i class="bi bi-trash-fill text-danger"></i>
                                    </a>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
                <div class="d-flex flex-row">
                    <div class="hint-text">Showing <b>
                            <%= projects.length %>
                        </b> out of <b>
                            <%= projects.length %>
                        </b> entries</div>
                    <ul class="ms-auto pagination">
                        <li class="page-item disabled"><a href="#" class="page-link">Previous</a></li>
                        <li class="page-item active"><a href="#" class="page-link">1</a></li>
                        <li class="page-item disabled"><a href="#" class="page-link">2</a></li>
                        <li class="page-item disabled"><a href="#" class="page-link">3</a></li>
                        <li class="page-item disabled"><a href="#" class="page-link">4</a></li>
                        <li class="page-item disabled"><a href="#" class="page-link">5</a></li>
                        <li class="page-item disabled"><a href="#" class="page-link">Next</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-5">
        <header class="text-center mb-3">
            <h1>ผลงานที่ตีพิมพ์</h1>
        </header>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
            <% projects.forEach((project, index)=> { %>

                <div class="col">
                    <div class="card h-100">
                        <a class="link-dark link-offset-2 link-underline-opacity-0 link-underline-opacity-25-hover" href="<%= project.project_link %>">
                            <img src="https://mdbcdn.b-cdn.net/img/new/standard/city/041.webp" class="card-img-top"
                                alt="Imgage of <%= project.project_name %>">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= project.project_name %>
                                </h5>
                                <p class="card-text">
                                    <%= project.project_desc %>
                                </p>
                            </div>
                        </a>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>