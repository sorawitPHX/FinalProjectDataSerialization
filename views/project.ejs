<div class="container" style="margin-top: 15vh;">
    <div class="mb-5"></div>
    <header class="text-center mb-3">
        <h1>ผลงานที่ตีพิมพ์</h1>
    </header>


    <div class="mb">
        <div class="row">
            <div class="col-4">
                <form action="/project" method="get">
                    <div class="input-group ">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input name="q" class="form-control " type="text" placeholder="ค้นหาชื่อวิจัย / รายละเอียด"
                            value="<%= q %>">
                        <button type="submit" class="btn btn-outline-success">ค้นหา</button>
                    </div>
                </form>
            </div>
            <div class="col-8">
                <!-- <%= currentPage %>   -->
                    <ul class="pagination justify-content-end">
                        <li class="page-item <%= prevPage ? '' : 'disabled' %>">
                            <a href="?<%= prevPage %>&q=<%= q %>"
                                class="page-link">
                                ก่อนหน้า
                            </a>
                        </li>
                        <% for(let k in pages){ %>
                        <li class="page-item <%= k == currentPage ? 'active' : '' %>">
                            <a href="?<%= pages[k] %>&q=<%= q %>" class="page-link">
                                <%= k %>
                            </a>
                        </li>
                        <% } %>
                        <li class="page-item <%= nextPage ? '' : 'disabled' %>">
                            <a href="?<%= nextPage %>&q=<%= q %>"
                                class="page-link">
                                ถัดไป
                            </a>
                        </li>
                    </ul>
            </div>
        </div>
    </div>
    <hr>
    <% if(projects.length >= 1){ %>
    <div class="mb-3">
        <!-- แสดง  ผลงานจากทั้งหมด  ผลงาน -->
        ผลงานทั้งหมด <b><%= totalResult %></b> รายการ (แสดงผล <b><%= projects.length %></b> รายการ)
    </div>


    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% projects.forEach((project, index)=> { %>
            <div class="col">
                <div class="card h-100 rounded-4">
                    <!-- <a class="link-dark link-offset-2 link-underline-opacity-0 link-underline-opacity-25-hover"
                        href="<%= project.link %>"></a> -->
                    <div class="card-header h-100 rounded-top-4">
                        <div class="text-center">
                            <h1 class="mb-3">
                                <i class="bi bi-file-text-fill"></i>
                            </h1>
                            <h5 class="card-title mb-3">
                                <%= project.title %>
                            </h5>
                        </div>
                    </div>
                    <!-- <img src="<%= project.project_img_path %>" class="card-img-top"
                        alt="Imgage of <%= project.project_name %>"> -->
                    <div class="card-body">
                        <p class="card-text">
                            <div class="">
                                <!-- <div class="d-flex justify-content-between">
                                    <% if(typeof project.publication_info.authors !== 'undefined' ){ %>
                                    <span>ผู้เขียน:</span>
                                    <span>
                                        <% for (author of project.publication_info.authors) { %>
                                            <a class="me-2" href="<%= author.link %>">
                                                <%= author.name %>
                                            </a>
                                        <% } %>
                                    </span>
                                    <% } %>
                                </div> -->
                                <div class="text-center">
                                    บทคัดย่อ
                                </div>
                                <%= project.snippet %>
                                <hr>
                                <div class="text-center">
                                    <a href="<%= project.link %>" class="btn btn-primary rounded-pill">อ่านเพิ่มเติม</a>
                                </div>
                            </div>
                        </p>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted"><%= project.publication_info.summary %> </small>
                    </div>
                </div>
            </div>
            <% }) %>
    </div>
    <% }else{ %>
        ไม่พบการค้นหา "<%= q %>"
    <% } %>
</div>
</div>