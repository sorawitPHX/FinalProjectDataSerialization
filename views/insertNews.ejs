<div class="admin-view" onload="alertRes()">
  <% if (typeof status !=='undefined' && typeof msg !=='undefined' ) { %>
    <script>
        window.onload = () => {
            let status = `<%= status %>`
            let msg = `<%= msg %>`
            if (status == 'success') {
                Swal.fire({
                    title: "ดำเนินการสำเร็จ",
                    text: msg,
                    icon: "success"
                }).then((result) => {
                    window.location.href = '/insertNews'
                })
            } else {
                Swal.fire({
                    title: "เกิดข้อผิดพลาด",
                    text: msg,
                    icon: "warning"
                }).then((result) => {
                    window.location.href = '/insertNews'
                })
            }
        }
    </script>
  <% } %>
</div>

<div class="container" style="margin-top: 100px;">
   
  <table class="table table-striped table-hover table-bordered">
    <thead>
        <tr class="text-center">
            <th>
                <span class="custom-checkbox">
                    <input class="form-check-input" onclick="toggleSelectAll(this)" type="checkbox" id="selectAll">
                </span>
            </th>
            <th>หัวข้อข่าวสาร</th>
            <th>เนื้อหา</th>
            <th>ที่อยู่ไฟล์</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% if (newsList.length > 0) { %> 
            <% newsList.forEach((news) => { %> 
                <tr>
                    <td class="text-center">
                        <input type="checkbox">
                    </td>
                    <td class="newsTitle"><%= news.title %></td> 
                    <td class="newsContent"><%= news.content %></td> 
                    <td>
                        <% if (news.image) { %>
                            <!-- <img src="/<%= news.image %>" alt="News Image" style="width: 100px;"> -->
                            <%= news.image %>
                        <% } else { %>
                            No Image
                        <% } %>
                    </td>
                    <td class="text-center">
                      <a href="/edit/<%= news._id %>" class="btn btn-sm btn-success"
                        data-bs-toggle="modal"
                        data-bs-target="#Viewmodal_<%= news._id %>"
                        data-title="<%= news.title %>" 
                        data-content="<%= news.content %>" 
                        data-image="<%= news.image ? '/' + news.image : 'img/no_image.jpg' %>">
                        <i class="bi bi-arrow-up-right-square-fill"></i></a>
                      <a href="#" class="btn btn-sm btn-warning news-button" 
                         data-bs-toggle="modal"
                         data-bs-target="#editProjectModal_<%= news._id %>"
                         data-title="<%= news.title %>" 
                         data-content="<%= news.content %>" 
                         data-image="<%= news.image ? '/' + news.image : 'img/no_image.jpg' %>">
                          <i class="bi bi-pencil-fill"></i>
                      </a>
                      <a href="/delete/<%= news._id %>" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i></a>
                  </td>
                  <form action="/insertNews/updateNews/<%= news._id %>" method="post" enctype="multipart/form-data">
                    <div class="modal fade" id="editProjectModal_<%= news._id %>" tabindex="-1"
                        aria-labelledby="editProjectModalLabel" aria-hidden="true">
                        <div class="modal-dialog-centered modal-dialog-scrollable modal-dialog modal-xl">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title">แก้ไขข่าวสาร</h4>
                                    <div class="ms-auto">
                                        <button type="button" class="btn" data-bs-dismiss="modal" aria-hidden="true">X</button>
                                    </div>
                                </div>
                                <div class="modal-body">
                                    <input type="hidden" name="id" value="<%= news._id %>">
                                    <div class="form-floating mb-3">
                                        <textarea class="form-control" required id="news_title_<%= news._id %>" name="news_title" placeholder="Enter the title here." style="height: 150px; resize: none;"><%= news.title %></textarea>
                                        <label for="news_title_<%= news._id %>">หัวข้อข่าวสาร</label>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <textarea class="form-control" required placeholder="Enter the content here." id="news_content_<%= news._id %>" name="news_content" style="height: 180px; resize: none"><%= news.content %></textarea>
                                        <label for="news_content_<%= news._id %>">เนื้อหา</label>
                                    </div>
                                    <div class="form-floating mb-3 col-lg-6">
                                        <input type="text" class="form-control" id="news_image_<%= news._id %>" name="news_image" value="<%= news.image %>" disabled>
                                        <label for="news_image_<%= news._id %>" >ที่อยู่ไฟล์</label>
                                    </div>
                
                                    <div class="mb-3">
                                        <div class="row row-cols-1 row-cols-md-2 g-4">
                                            <div class="col">
                                                <div class="card">
                                                    <img src="<%= news.image %>" class="card-img-top" style="height: 300px; object-fit: cover;" alt="Current Image">
                                                    <div class="card-body">
                                                        <h5 class="card-title">Current Image</h5>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col">
                                                <div class="card">
                                                    <div class="card-body">
                                                        <h5 class="card-title">Upload New Image</h5>
                                                        <div class="input-group mt-3">
                                                            <input type="file" class="form-control" id="news_img_<%= news._id %>" name="news_img">
                                                            <label class="input-group-text" for="news_img_<%= news._id %>">Upload</label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer bg-light">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ยกเลิก</button>
                                    <button type="submit" class="btn btn-info">บันทึก</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                
                <div class="modal fade" id="Viewmodal_<%= news._id %>" tabindex="-1"
                  aria-labelledby="ViewmodalLabel" aria-hidden="true">
                  <div class="modal-dialog-centered modal-dialog-scrollable modal-dialog modal-xl">
                      <div class="modal-content">
                          <div class="modal-header">
                              <h4 class="modal-title modalHead"><%= news.title %></h4>
                              <div class="ms-auto">
                                  <button type="button" class="btn" data-bs-dismiss="modal" aria-hidden="true">X</button>
                              </div>
                          </div>
                          <div class="modal-body">
                              <input type="hidden" name="id" value="<%= news._id %>">

                              <!-- img -->
                              <div class="mb-3"">
                                <div class="row row-cols-1 row-cols-md-2 g-4 d-flex justify-content-center text-center">
                                    <div class="col">
                                        <div class="card">
                                            <img src="<%= news.image %>" class="card-img-top" style="height: 300px; object-fit: cover;" alt="Current Image">
                                            <div class="card-body">
                                                <h5 class="card-title">ภาพปัจจุบัน</h5>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                              </div>
                              <div class="form-floating mb-3">
                                  <textarea class="form-control" required disabled placeholder="Enter the content here." id="news_content_<%= news._id %>" name="news_content" style="height: 180px; resize: none"><%= news.content %></textarea>
                                  <label for="news_content_<%= news._id %>">เนื้อหา</label>
                              </div>
                              <div class="form-floating mb-3">
                                  <input type="text" class="form-control" id="news_image_<%= news._id %>" name="news_image" value="<%= news.image %>" disabled>
                                  <label for="news_image_<%= news._id %>" >ที่อยู่ไฟล์</label>
                              </div>
          

                          </div>
                          <div class="modal-footer bg-light">
                              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ปิด</button>
                          </div>
                      </div>
                  </div>
              </div>
                </tr>
            <% }); %>
        <% } else { %>
            <tr>
                <td colspan="5" class="text-center">ไม่มีข่าวสารที่จะแสดง</td>
            </tr>
        <% } %>
    </tbody>
</table>

<!-- Bootstrap Pagination -->
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-end">
        <% if (currentPage > 1) { %>
            <li class="page-item">
                <a class="page-link" href="/insertNews/?page=<%= currentPage - 1 %>" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        <% } %>
        
        <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                <a class="page-link" href="/insertNews/?page=<%= i %>"><%= i %></a>
            </li>
        <% } %>

        <% if (currentPage < totalPages) { %>
            <li class="page-item">
                <a class="page-link" href="/insertNews/?page=<%= currentPage + 1 %>" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        <% } %>
    </ul>
</nav>



